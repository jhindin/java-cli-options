<?xml version="1.0" encoding="UTF-8"?>

<!-- The file replaces netbeans-generated build.xml in a way that 
  nbproject/build-impl.xml is run under NetBeans and so-build.xml from
  CLI -->



<project name="cli-options" default="default" basedir=".">    
    <condition property="import.path" value="so-build.xml">
        <not><isset property="netbeans.user"/></not>
    </condition>
    <condition property="import.path" value="nbproject/build-impl.xml">
        <isset property="netbeans.user"/>
    </condition>

    <!-- conditional import. If executed from NetBeans, uses nbproject/build-impl,xml
                if triggered from a command line, use so-build.xml -->
    <import file="${import.path}" />

</project>


